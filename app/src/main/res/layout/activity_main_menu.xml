<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainMenuActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
        android:id="@+id/newRouteLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/custom_layout_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

            <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_new_route"/>

            <Button
            android:id="@+id/newRouteButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/newRouteButton"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_background"/>
        </LinearLayout>
s
        <LinearLayout
            android:id="@+id/myRoutesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:background="@drawable/custom_layout_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_my_routes"/>

            <Button
                android:id="@+id/myRoutesButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/myRoutesButton"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_background"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myInterestsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:background="@drawable/custom_layout_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_pref"/>

            <Button
                android:id="@+id/myInterestsButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/myInterestsButton"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setDistanceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:background="@drawable/custom_layout_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_walk"/>

            <Button
                android:id="@+id/setDistanceButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/setDistanceButton"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_background"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/helpLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:background="@drawable/custom_layout_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_help"/>

            <Button
                android:id="@+id/helpButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/helpButton"
                android:textColor="@color/white"
                android:background="@drawable/custom_button_background"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
